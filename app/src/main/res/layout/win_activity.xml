<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backHome"
                    android:layout_marginLeft="16dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_arrow_back_white_24dp"
                    android:clickable="true"/>
                <TextView
                    android:layout_toRightOf="@id/backHome"
                    android:paddingLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="ReadMeMore"/>

            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/LLtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">


        <TextView
            android:id="@+id/textGains"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous avez : "
            android:textSize="16dp" />

        <TextView
            android:id="@+id/totalPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textGains"
            android:text="200 points"
            android:textSize="16dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/LLcinq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLtext"
        >

        <ImageView
            android:id="@+id/cinq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/euro" />

        <Button
            android:id="@+id/button2"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cinq"
            android:text="Commander"
            android:background="#000000"
            android:alpha="0.75"
            android:textColor="#F2F2F2"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LLdix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLcinq"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LLtext"
            android:layout_marginLeft="16dp"
            android:background="@drawable/euro" />

        <Button
            android:layout_width="match_parent"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Commander"
            android:background="#000000"
            android:alpha="0.75"
            android:textColor="#F2F2F2"/>
    </LinearLayout>
</RelativeLayout>