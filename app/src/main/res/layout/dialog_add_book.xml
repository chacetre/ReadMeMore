<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/txt_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titre"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_toRightOf="@id/txt_titre"
        />

    <TextView
        android:id="@+id/txt_auteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auteur"
        android:layout_below="@id/txt_titre"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/auteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/titre"
        android:layout_toRightOf="@id/txt_auteur"
        />

    <TextView
        android:id="@+id/ET_text_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="16dp"
        android:layout_below="@id/auteur"/>

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date de parution"
        android:layout_below="@id/ET_text_information"
        android:layout_margin="16dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/ET_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/ET_text_information"
        android:layout_toRightOf="@id/txt_date"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/txt_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombres de pages"
        android:layout_below="@id/txt_date"
        android:layout_margin="16dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/ET_pages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/ET_date"
        android:layout_toRightOf="@id/txt_page"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/dialogButtonRecherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:layout_below="@+id/auteur"
        android:layout_alignRight="@+id/titre"
        android:layout_alignEnd="@+id/titre"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/dialogButtonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:layout_below="@+id/ET_pages"
        android:layout_marginTop="12dp"
        android:visibility="gone"/>



</RelativeLayout>